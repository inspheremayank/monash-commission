{% set popularArticles = _Article.getPopularArticles({ limit: 2, excludeArticleIds : articleId }) %}
{% if popularArticles|length > 0 %}
<div class="article__main-related">
    <h3>You may also like...</h3>
    <div class="row">
        {% set i = 1 %}
        {% for article in popularArticles %}
            {{this.render('_single-article.twig', {article: article, 'position': i, network: network, class: 'col-12 col-md-12 col-lg-6 card__view-half'}) | raw}}
            {% set i = i+1 %}
        {% endfor %}
    </div>
</div>
{% endif %}